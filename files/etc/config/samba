
config samba
	option workgroup 'WORKGROUP'
	option name 'ZoWrt'
	option autoshare '0'
	option homes '0'

config sambashare
	option auto '1'
	option path '/mnt/sda'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda'
	option browseable 'yes'
	option name 'Media-A'

config sambashare
	option auto '1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sdb1'
	option path '/mnt/sdb'
	option name 'Media-B'
	option browseable 'yes'

config sambashare
	option auto '1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'mmcblk1p3'
	option name 'opt'
	option path '/opt'
	option browseable 'no'

config sambashare
	option browseable 'yes'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option name 'downloading'
	option path '/opt/downloading'

